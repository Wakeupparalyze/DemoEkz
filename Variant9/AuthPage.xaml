<Window x:Class="Variant9.AuthPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Variant9"
        mc:Ignorable="d"
        Title="AuthPage" Left="0" Top="0" Height="450" Width="800">
    <Grid>
        <StackPanel MinWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label MinHeight="20" Content="Логин"></Label>
            <TextBox x:Name="loginBox" MinHeight="1" Margin="0,5" MinWidth="100" Text=""></TextBox>
            <Label MinHeight="20" Content="Пароль"></Label>
            <TextBox x:Name="passwordBox" MinHeight="1" MinWidth="100" Text=""></TextBox>
            <Button MinHeight="20" Margin="0,5" Content="Войти" Click="AuthClick"></Button>
            <Button x:Name="AuthLikeGuest" Content="Войти как гость" Background="LimeGreen" Click="AuthLikeGuestButton"></Button>
            <Label x:Name="ErrorMessage" MinHeight="20" Content="" Foreground="Red" ></Label>
        </StackPanel>
        <Canvas x:Name="AuthField" Width="150" Height="70"></Canvas>

    </Grid>
</Window>
